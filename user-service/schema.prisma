generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  street    String?
  city      String?
  state     String?
  zipCode   String?
  location  Unsupported("geometry(Point, 4326)")?
  maxCommuteTime Int?
  transportationMethod String?
  
  // Housing preferences
  homeType String?
  rentOrBuy String?
  rentPriceMin Int?
  rentPriceMax Int?
  buyPriceMin Int?
  buyPriceMax Int?
  bedrooms Int?
  bathrooms Int?
  parking String?
  
  // Amenities preferences
  interests String[]
  location String?
  lifestyle String[]
  goodSchoolDistrict Boolean?
  proximityToAmenities String?
  topAmenities String[]
  
  @@map("users")
}
